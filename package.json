{
    "name": "todo-in-problem-tab",
    "displayName": "TODO in Problem Tab",
    "publisher": "Netris",
    "description": "An extension to have TODO etc. comments in the problem tab",
    "repository": {
        "url": "https://github.com/Netris89/todo-in-problem-tab"
    },
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.108.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "todo-in-problem-tab",
                "properties": {
                    "todo-in-problem-tab.keywords": {
                        "type": "array",
                        "description": "List of keywords",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "TODO",
                            "FIXME",
                            "BUG",
                            "HACK"
                        ],
                        "markdownDescription": "The list of comment keywords (e.g. TODO, FIXME) that will be reported as problems."
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.108.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "typescript-eslint": "^8.52.0",
        "eslint": "^9.39.2",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    }
}